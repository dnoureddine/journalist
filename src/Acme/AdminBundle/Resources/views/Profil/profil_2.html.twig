    {% block javascripts %}
        <!-- page script -->
        <script>

            /* add un form pour diplome */
            function addDiplome(){
                $('#addDiplome').click(function(){

                    /**** add diplome form *****/
                    $('#boxdiplomes').find(':first').clone(true).appendTo('#content_box_diplomes');

                    /*** change diplomes number   */
                    $('#nbDiplome').html($('.boxdiplomes').length-1);


                });
            }

            /* add un form pour Experience */
            function addExperience(){
                $('#addExperience').click(function(){

                    /**** add Experience form *****/
                    $('#boxexperiences').find(':first').clone(true).appendTo('#content_box_experiences');

                    /*** change diplomes number   */
                    $('#nbExperience').html($('.boxexperiences').length-1);


                });
            }

            /*** supprimer un diplome  ****/
            function suppDiplome(){
                $('body').on('click', '.suppDiplome', function() {
                    /****  supprimer un diplome  ***/
                    $(this).parent().parent().parent().parent().remove();
                    

                    /*** change diplomes number   */
                    $('#nbDiplome').html($('.boxdiplomes').length-1);

                });
            }


            /*** supprimer un Experience  ****/
            function suppExperience(){
                $('body').on('click', '.suppExperience', function() {
                    /****  supprimer un Experience  ***/
                    $(this).parent().parent().parent().parent().remove();


                    /*** change Experience number   */
                    $('#nbExperience').html($('.boxexperiences').length-1);

                });
            }

            function addliAllTypes(type,source){
                var html='<li class="alert multi_tags">'+
                        '<input type="hidden" value="'+$(source).find(":selected").val()+'" name="'+type+'[]" >'+
                        '<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>'+
                        '<h5>'+$(source).find(":selected").text()+'</h5>'+
                        '</li>';

                $('#'+type).append(html);
            }

            /*** add tags  ****/
            function addTags(){
                $('body').on('change', '.tagschocestools', function() {
                    addliAllTypes("tools", this);
                });
                $('body').on('change', '.tagschoceslangues', function() {
                    addliAllTypes("langue", this);
                });
                $('body').on('change', '.tagschocesdomaines', function() {
                    addliAllTypes("domaine", this);
                });
            }

            /*******************************/
            addDiplome();
            addExperience();
            suppDiplome();
            suppExperience();
            addTags();

        </script>
